<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".products.ui.CartFragment">

    <RelativeLayout
        android:id="@+id/app_bar"
        style="@style/Widget.Veggie.AppBar"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.Veggie.Subtitle1"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="@string/menu_cart"
            android:layout_toStartOf="@id/clear_cart" />
        <Button
            android:id="@+id/clear_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_remove_shopping_cart"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:minWidth="0dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:paddingVertical="@dimen/padding_small"
        android:paddingHorizontal="@dimen/padding_standard"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/list_item_cart" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.Veggie.ProgressBar"
        android:layout_centerInParent="true"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/error_text"
        style="@style/Widget.Veggie.ErrorText"
        android:layout_centerInParent="true"
        tools:text="ErrorText" />

</RelativeLayout>