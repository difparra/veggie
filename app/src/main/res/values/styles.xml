<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Qty button styles -->
    <style name="Widget.Veggie.QtyButton.Add" parent="">
        <item name="android:background">@drawable/sel_btn_qty_add</item>
        <item name="backgroundTint">@color/sel_btn_qty_add</item>
        <item name="enabled_behaviour">add</item>
    </style>
    <style name="Widget.Veggie.QtyButton.Reduce" parent="">
        <item name="android:background">@drawable/sel_btn_qty_reduce</item>
        <item name="backgroundTint">@color/sel_btn_qty_reduce</item>
        <item name="enabled_behaviour">reduce</item>
    </style>


    <style name="Widget.Veggie.UserItem" parent="Widget.Veggie.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">?attr/paddingStandard</item>
        <item name="android:drawablePadding">?attr/paddingStandard</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>