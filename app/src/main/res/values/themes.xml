<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Veggie" parent="Base.Theme.MaterialThemeBuilder">

        <!-- Material colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_700</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorsRandom">@array/dark_colors</item>

        <!-- Material type attributes -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Veggie.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Veggie.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Veggie.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Veggie.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Veggie.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Veggie.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Veggie.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Veggie.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Veggie.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Veggie.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Veggie.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Veggie.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Veggie.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Veggie.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Veggie.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Veggie.LargeComponent</item>

    </style>


    <!--
        Checkbox:       Type: inherits from AppCompatCheckBox / Shape is not supported
        RadioButtons:   Type: inherits from AppCompatRadioButton / Shape is not supported
        Slider:         Type: TextAppearance.App.Tooltip (used just for example to show 20 in a slider of 100)
        Switch:         Type: inherits from SwitchCompat
     -->

</resources>