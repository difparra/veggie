<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_sign_in"
    app:startDestination="@id/signInOptionsFragment">

    <fragment
        android:id="@+id/signInOptionsFragment"
        android:name="com.diegoparra.veggie.auth.ui.SignInOptionsFragment"
        android:label="fragment_sign_in_options"
        tools:layout="@layout/fragment_sign_in_options">
        <action
            android:id="@+id/action_signInOptionsFragment_to_emailViewPagerFragment"
            app:destination="@id/emailViewPagerFragment" />
    </fragment>

    <!-- Internally has a viewPager with email options: SignIn/SignUp -->
    <fragment
        android:id="@+id/emailViewPagerFragment"
        android:name="com.diegoparra.veggie.auth.ui.EmailViewPagerFragment"
        android:label="fragment_email_view_pager"
        tools:layout="@layout/fragment_email_view_pager">
        <action
            android:id="@+id/action_emailViewPagerFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.diegoparra.veggie.auth.ui.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />


</navigation>