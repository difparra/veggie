<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="?attr/appBarElevation"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Veggie.Subtitle2"
        android:paddingVertical="?attr/paddingSmall"
        tools:text="Order status" />

    <View
        style="@style/Widget.Veggie.Divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Veggie.Caption"
        android:layout_marginVertical="?attr/paddingSmall"
        android:text="@string/delivery_programmed_for" />

    <TextView
        android:id="@+id/delivery_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="SÃ¡, Jul 3; 9-00 a.m. - 1:00 p.m." />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Calle 130C" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_data"
        android:textAppearance="@style/TextAppearance.Veggie.Caption"
        android:layout_marginTop="?attr/paddingStandard"
        android:layout_marginBottom="?attr/paddingSmall" />

    <TextView
        android:id="@+id/payment_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Efectivo - Contraentrega" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/products_order_list_title"
        android:layout_marginTop="?attr/paddingStandard"
        android:layout_marginBottom="?attr/paddingSmall"
        android:textAppearance="@style/TextAppearance.Veggie.Caption"/>

</LinearLayout>