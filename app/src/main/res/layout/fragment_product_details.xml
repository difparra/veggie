<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".products.ui.ProductDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_big"
    android:paddingTop="@dimen/padding_big_half">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="Product"
        android:layout_marginHorizontal="@dimen/padding_big"
        android:layout_marginVertical="@dimen/padding_small"/>

    <View
        style="@style/Widget.Veggie.Divider" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.Veggie.ProgressBar"
        android:layout_gravity="center"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/error_text"
        style="@style/Widget.Veggie.ErrorText"
        android:layout_gravity="center"
        tools:text="Error Text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/variations_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/list_item_variation_item"
        android:layout_marginHorizontal="@dimen/padding_big"/>

</LinearLayout>