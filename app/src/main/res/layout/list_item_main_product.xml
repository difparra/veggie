<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        tools:src="@mipmap/ic_launcher"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_toStartOf="@id/btn_qty"
        android:elegantTextHeight="true"
        tools:text="Description"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:elegantTextHeight="true"
        tools:text="Name" />

    <com.diegoparra.veggie.core.QtyButton
        android:id="@+id/btn_qty"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_add_main_prod"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:layout_below="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/name"
        tools:text="1" />

    <com.google.android.material.chip.Chip
        android:id="@+id/label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentStart="true"
        app:chipMinTouchTargetSize="0dp"
        app:chipMinHeight="20dp"
        app:chipBackgroundColor="?attr/colorSecondary"
        android:textColor="?attr/colorOnSecondary"
        android:clickable="false"
        tools:text="Label"
        tools:visibility="visible" />

</RelativeLayout>